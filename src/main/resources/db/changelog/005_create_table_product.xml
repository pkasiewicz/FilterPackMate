<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.2.xsd">

    <changeSet id="005-1" author="pkasiewicz">
        <createTable tableName="product">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="name" type="VARCHAR(10)">
                <constraints unique="true"/>
            </column>
            <column name="carton_id" type="BIGINT"/>
            <column name="filters_per_carton" type="INT"/>
            <column name="tray_id" type="BIGINT"/>
            <column name="pallet" type="VARCHAR(10)"/>
            <column name="filters_per_pallet" type="INT"/>
            <column name="cartons_per_pallet" type="INT"/>
            <column name="corner_id" type="BIGINT"/>

        </createTable>
        <addForeignKeyConstraint baseTableName="product"
                                 baseColumnNames="carton_id"
                                 referencedTableName="carton"
                                 referencedColumnNames="id"
                                 constraintName="fk_product_carton"/>
        <addForeignKeyConstraint baseTableName="product"
                                 baseColumnNames="tray_id"
                                 referencedTableName="tray"
                                 referencedColumnNames="id"
                                 constraintName="fk_product_tray"/>
        <addForeignKeyConstraint baseTableName="product"
                                 baseColumnNames="corner_id"
                                 referencedTableName="corner"
                                 referencedColumnNames="id"
                                 constraintName="fk_product_corner"/>
    </changeSet>

</databaseChangeLog>